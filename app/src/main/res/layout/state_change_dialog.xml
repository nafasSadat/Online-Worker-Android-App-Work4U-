<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"

    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:id="@+id/lineraid"

        android:background="@drawable/button_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/namecontace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:text="Available Or Not?"
            android:textColor="@color/teal_700"
            android:textSize="24dp"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView9">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"
                    android:id="@+id/availRadiobrn">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/teal_700"
                        android:text="Available"
                        android:buttonTint="@color/teal_700"
                        android:id="@+id/available"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="20dp"
                        android:buttonTint="@color/teal_700"
                        android:textColor="@color/teal_700"
                        android:text="Not Available"
                        android:id="@+id/notavailabe"/>
                </RadioGroup>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/avsumbit"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineraid"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="15dp"
                android:text="Submit"
                android:textStyle="bold"
                android:textColor="@color/teal_700" />
            <TextView
                android:id="@+id/avcancel"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineraid"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="15dp"
                android:text="Cancel"
                android:textStyle="bold"
                android:textColor="@color/teal_700" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>