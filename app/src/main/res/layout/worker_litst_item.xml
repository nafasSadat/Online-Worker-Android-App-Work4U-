<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blur_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#63303030">
    <LinearLayout
        android:id="@+id/worker_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/worker_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_max"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/BoldTitleTextTheme"
                android:id="@+id/workerName"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryTextTheme"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14dp"
                android:id="@+id/Worker_Skill"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nafas"
                style="@style/SecondaryTextTheme"
                android:textColor="@color/white"
                android:id="@+id/Worker_phone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/showrate2"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                    android:paddingRight="5dp"
                    android:drawablePadding="5dp"
                    android:text="8.9"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="3dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginTop="14dp"
                    android:paddingTop="10dp"
                    android:id="@+id/satus2"

                    />
            </LinearLayout>





        </LinearLayout>


    </LinearLayout>
    </eightbitlab.com.blurview.BlurView>
</RelativeLayout>